---
import type { EnrollmentOfferingResponse } from "../../types/api";

interface Props {
    data: EnrollmentOfferingResponse;
    studentName: string;
}

const { data, studentName } = Astro.props;

const statusColors = {
    ENROLLED: "bg-green-100 text-green-800 border-green-200",
    DRAFT: "bg-yellow-100 text-yellow-800 border-yellow-200",
    REJECTED: "bg-red-100 text-red-800 border-red-200",
    NONE: "bg-gray-100 text-gray-800 border-gray-200"
};

const isEnrolled = data.enrollment_status === 'ENROLLED';
---

<div class="space-y-6">
    <!-- Welcome Header -->
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Welcome, {studentName}</h1>
            <p class="text-gray-500 text-sm">Term: <span class="font-semibold text-plm-navy">{data.term_name}</span></p>
        </div>
        <div class={`px-6 py-2 rounded-full border ${statusColors[data.enrollment_status] || statusColors.NONE} font-bold tracking-wider`}>
            {data.enrollment_status}
        </div>
    </div>

    <!-- Conditional Schedule View -->
    {isEnrolled ? (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center">
                    <h2 class="font-bold text-gray-700 uppercase text-sm">Current Schedule</h2>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-gray-50 text-gray-500 uppercase font-bold text-xs">
                        <tr>
                            <th class="px-6 py-3">Code</th>
                            <th class="px-6 py-3">Subject</th>
                            <th class="px-6 py-3">Section</th>
                            <th class="px-6 py-3">Schedule</th>
                            <th class="px-6 py-3 text-center">Units</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                        {data.sections.length > 0 ? data.sections.map((section) => (
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 font-medium text-plm-navy">{section.subject_code}</td>
                                    <td class="px-6 py-4">{section.subject_title}</td>
                                    <td class="px-6 py-4">{section.section_name}</td>
                                    <td class="px-6 py-4 font-mono text-xs">{section.schedule}</td>
                                    <td class="px-6 py-4 text-center">{section.units}</td>
                                </tr>
                        )) : (
                                <tr><td colspan="5" class="px-6 py-8 text-center text-gray-500 italic">No enrolled subjects found.</td></tr>
                        )}
                        </tbody>
                    </table>
                </div>
            </div>
    ) : (
        /* Empty State / CTA for Non-Enrolled Students */
            <div class="bg-blue-50 border border-blue-100 p-12 rounded-xl text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 text-blue-600 mb-4">
                    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-blue-900 mb-2">You are not enrolled yet.</h3>
                <p class="text-blue-700 mb-6">Please proceed to the enrollment page to select your subjects.</p>
                <a href="/student/enrollment" class="inline-block text-sm font-bold text-white bg-blue-600 px-8 py-3 rounded shadow hover:bg-blue-700 transition-colors">
                    Go to Enrollment
                </a>
            </div>
    )}
</div>