---
interface Props {
    professorName: string;
    department: string;
}
const { professorName, department } = Astro.props;
---
<div class="space-y-6">
    <div class="bg-gradient-to-r from-plm-navy to-blue-900 text-white p-8 rounded-xl shadow-lg">
        <h1 class="text-3xl font-bold">Faculty Portal</h1>
        <p class="opacity-80">Department: {department}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="/grading/select-section" class="group bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:border-plm-gold transition-all cursor-pointer">
            <div class="h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-plm-gold group-hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
            <h3 class="font-bold text-gray-900 text-lg">Input Grades</h3>
            <p class="text-sm text-gray-500 mt-2">Submit grading sheets for the current semester.</p>
        </a>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
            <div class="h-10 w-10 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="font-bold text-gray-900 text-lg">My Schedule</h3>
            <p class="text-sm text-gray-500 mt-2">View assigned teaching loads and room assignments.</p>
        </div>
    </div>
</div>